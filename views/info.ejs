<h1>About this Camp Site</h1>

<h4><u>Name:</u></h4>
<p><%= campsite.name %></p>

<img src="<%= campsite.image_url %>" alt="">

<img src="<%= campsite.image_url_1 %>" alt="">

<img src="<%= campsite.image_url_2 %>" alt="">

<h4><u>Location:</u></h4>
<p><%= campsite.location %></p>

<h4><u>Description:</u></h4>
<p><%= campsite.description %></p> 

<h4><u>Thing to do:</u></h4>
<p><%= campsite.thing_to_do %></p>

<form action="/campsites/<%= campsite.id %>?_method=delete" method="post">
    
    <button>Delete</button>
    <br>
    <a href="/campsites/<%= campsite.id %>/edit">edit</a>
    
</form>

<h1>comment</h1>

<% for (let comment of comments) { %>
    
    <p><%= comment.name %> - <span><%= comment.date %></span></p>
    <p><%= comment.comment %></p>
    
<% } %>

<form action="/comments/<%= campsite.id %>" method="post">
    <h4><u><label for="">Share your thought about this place</label></u></h4>
    
    <label for="">Name</label>
    <input type="text" name="name">
    <br>  
    <br>
    <textarea name="comment"></textarea>
    <button>post</button>
</form>